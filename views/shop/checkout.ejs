<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <ul class="cart__item-list">
            <% products.forEach(product => { %>
              <li class="cart__item">
                <h1><%= product.productId.title %></h1>
                <h2>Quantity: <%= product.quantity %></h2>
              </li>
            <%  }); %>
          </ul>
          <div class="centered">
            <h2>Toatl: <%= productsSum %></h2>
          </div>
          <div class="centered">
            <button id="order-btn" class="btn">ORDER</button>
            <script src="https://js.stripe.com/v3/"></script>
            <script>
                // 357. using stripe in your app
                var stripe =Stripe('pk_test_51OxubMJcQDR1SfLLIGxKI0gDIVsSDExnaqW2KMPIaGRStZhtM1JOR6JUrzmecXJoemeWdkHDoGYDXx2RNXXeoCnb00WFrSqgxU')
                var orderBtn = document.getElementById('order-btn')
                orderBtn.addEventListener('click',function(){
                    stripe.redirectToCheckout({sessionId: '<%= sessionId %>'})})
            </script>
          </div>
    </main>
<%- include('../includes/end.ejs') %>